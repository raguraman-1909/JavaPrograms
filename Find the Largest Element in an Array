public class FindLargestElement {
    public static void main(String[] args) {
        int[] array = {10, 4, 7, 1, 18, 13};
        int max = array[0];

        for (int num : array) {
            if (num > max) {
                max = num;
            }
        }

        System.out.println("Largest Element: " + max);
    }
}
